<div class="container">
  <h1><%= @post.title %></h1>

  <div class="row">
    <div class="col-md-8">
      <span class="pull-left"><%= label :post, :tags %><span class="glyphicon glyphicon-tag"></span></span>
      <% if @post.model_tag %>
        <p class="pull-left">Model: <span class="glyphicon glyphicon-ok"></span></p>
      <% end %>
      <% if @post.view_tag %>
        <p class="pull-left">View: <span class="glyphicon glyphicon-ok"></span>  </p>
      <% end %>
      <% if @post.controller_tag %>
        <p class="pull-left"> Controller: <span class="glyphicon glyphicon-ok"></span>  </p>
      <% end %>
      <br></br>
      <h3><%= @post.description %></h3>
      <br></br>
      <%= raw @post.element %>
      <br></br>
      <p><%= markdown(@post.body) %></p>
    </div>
    <div class="col-md-4">
  <!-- #5 -->
      <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-success' %>
      <%= link_to "Delete Post", @post, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
    </div>
  </div>

</div>
